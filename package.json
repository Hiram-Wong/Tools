{
  "name": "tools",
  "private": true,
  "version": "1.0.1",
  "license": "MIT",
  "main": "electron/background.js",
  "description": "Everything in the world is a tool.",
  "author": "Hiram Wong",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "electron:serve": "concurrently -k \"yarn dev\" \"yarn electron\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.hiramwong.tools",
    "productName": "Tools",
    "copyright": "Copyright Â© 2022 Tools Software Inc.",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "./build/icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "diff": "^5.1.0",
    "diff2html": "^3.4.19",
    "lodash": "^4.17.21",
    "pinia": "^2.0.21",
    "tdesign-icons-vue-next": "^0.1.5",
    "tdesign-vue-next": "^0.20.5",
    "unplugin-auto-import": "^0.11.2",
    "unplugin-vue-components": "^0.22.4",
    "vite-svg-loader": "^3.5.1",
    "vue": "^3.2.37",
    "vue-router": "^4.1.5",
    "wait-on": "^6.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.3",
    "electron": "^13.0.0",
    "electron-builder": "^23.3.3",
    "less": "^4.1.2",
    "vite": "^3.0.7"
  }
}
